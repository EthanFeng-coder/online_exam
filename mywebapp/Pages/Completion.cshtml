@page
@model CompletionModel
@{
    ViewData["Title"] = "Group Completion";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h2 class="text-center mb-0">Congratulations!</h2>
        </div>
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 48px;"></i>
            </div>
            <h3>You've completed!</h3>
            <p class="lead">Congratulations on completing all questions in this course!</p>
            <div class="mt-4">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house-door"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>